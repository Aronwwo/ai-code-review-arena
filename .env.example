# Environment Configuration for AI Code Review Arena
# Copy this file to .env and fill in your values

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
# Option 1: SQLite (default, easiest for local development)
DATABASE_URL=sqlite:///./data/code_review.db

# Option 2: PostgreSQL (uncomment and configure if using Postgres)
# DATABASE_URL=postgresql://codereviewer:dev_password_change_in_prod@localhost:5432/code_review_arena

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# Set to empty to disable Redis (will use in-memory fallback)
# REDIS_URL=

# Security
# IMPORTANT: Change this in production! Generate with: openssl rand -hex 32
JWT_SECRET_KEY=dev_secret_key_change_in_production_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_PROJECT=100

# LLM Provider API Keys (all optional)
# The app will fallback to Ollama or Mock provider if these are not set

# Groq (fast, free tier available - https://console.groq.com)
GROQ_API_KEY=

# Google Gemini (free tier available - https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# Cloudflare Workers AI (free tier with limits)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Ollama (local LLM - install from https://ollama.ai)
# Default assumes Ollama running on host machine
OLLAMA_BASE_URL=http://localhost:11434
# If using Ollama in Docker, use: http://ollama:11434
# On Windows/Mac Docker: http://host.docker.internal:11434

# Default LLM Configuration
DEFAULT_PROVIDER=mock
# Options: groq, gemini, cloudflare, ollama, mock
DEFAULT_MODEL=mixtral-8x7b-32768
# Model names vary by provider:
# - Groq: mixtral-8x7b-32768, llama-3.1-70b-versatile, gemma2-9b-it
# - Gemini: gemini-1.5-flash, gemini-1.5-pro
# - Ollama: codellama, llama3, mistral
# - Mock: any (ignored)

# Agent Configuration
MAX_CONVERSATION_TURNS=5
ENABLE_AGENT_CACHING=true
CACHE_TTL_HOURS=24

# Frontend Configuration (for Vite)
VITE_API_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
